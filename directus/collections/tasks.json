{
  "collection": "tasks",
  "fields": [
    {
      "field": "id",
      "type": "uuid",
      "meta": {
        "hidden": true,
        "readonly": true,
        "interface": "input",
        "special": ["uuid"]
      },
      "schema": {
        "is_primary_key": true,
        "has_auto_increment": false
      }
    },
    {
      "field": "name",
      "type": "string",
      "meta": {
        "interface": "input",
        "width": "full",
        "options": {
          "placeholder": "Название задачи"
        }
      },
      "schema": {
        "is_nullable": false
      }
    },
    {
      "field": "status",
      "type": "string",
      "meta": {
        "interface": "select-dropdown",
        "width": "half",
        "options": {
          "choices": [
            {
              "text": "Завершена",
              "value": "completed"
            },
            {
              "text": "В процессе",
              "value": "in-progress"
            },
            {
              "text": "Не начата",
              "value": "not-started"
            },
            {
              "text": "Просрочена",
              "value": "delayed"
            }
          ]
        }
      },
      "schema": {
        "default_value": "not-started",
        "is_nullable": false
      }
    },
    {
      "field": "assignee",
      "type": "string",
      "meta": {
        "interface": "input",
        "width": "half",
        "options": {
          "placeholder": "Исполнитель"
        }
      },
      "schema": {
        "is_nullable": false
      }
    },
    {
      "field": "assignee_avatar",
      "type": "string",
      "meta": {
        "interface": "file-image",
        "width": "half"
      },
      "schema": {
        "is_nullable": true
      }
    },
    {
      "field": "due_date",
      "type": "string",
      "meta": {
        "interface": "input",
        "width": "half",
        "options": {
          "placeholder": "Срок выполнения (ДД.ММ.ГГГГ)"
        }
      },
      "schema": {
        "is_nullable": false
      }
    },
    {
      "field": "priority",
      "type": "string",
      "meta": {
        "interface": "select-dropdown",
        "width": "half",
        "options": {
          "choices": [
            {
              "text": "Высокий",
              "value": "high"
            },
            {
              "text": "Средний",
              "value": "medium"
            },
            {
              "text": "Низкий",
              "value": "low"
            }
          ]
        }
      },
      "schema": {
        "default_value": "medium",
        "is_nullable": false
      }
    },
    {
      "field": "project_id",
      "type": "uuid",
      "meta": {
        "interface": "select-dropdown-m2o",
        "width": "full",
        "options": {
          "template": "{{name}}"
        }
      },
      "schema": {
        "is_nullable": false,
        "foreign_key_table": "projects",
        "foreign_key_column": "id"
      }
    },
    {
      "field": "user_created",
      "type": "uuid",
      "meta": {
        "interface": "select-dropdown-m2o",
        "hidden": true,
        "width": "half",
        "special": ["user-created"],
        "options": {
          "template": "{{name}}"
        }
      },
      "schema": {
        "is_nullable": true,
        "foreign_key_table": "users",
        "foreign_key_column": "id"
      }
    },
    {
      "field": "created_at",
      "type": "timestamp",
      "meta": {
        "interface": "datetime",
        "width": "half",
        "readonly": true,
        "hidden": true,
        "special": ["date-created"]
      },
      "schema": {
        "is_nullable": false
      }
    },
    {
      "field": "updated_at",
      "type": "timestamp",
      "meta": {
        "interface": "datetime",
        "width": "half",
        "readonly": true,
        "hidden": true,
        "special": ["date-updated"]
      },
      "schema": {
        "is_nullable": true
      }
    }
  ]
}
