{
  "collection": "documents",
  "fields": [
    {
      "field": "id",
      "type": "uuid",
      "meta": {
        "hidden": true,
        "readonly": true,
        "interface": "input",
        "special": ["uuid"]
      },
      "schema": {
        "is_primary_key": true,
        "has_auto_increment": false
      }
    },
    {
      "field": "name",
      "type": "string",
      "meta": {
        "interface": "input",
        "width": "full",
        "options": {
          "placeholder": "Название документа"
        }
      },
      "schema": {
        "is_nullable": false
      }
    },
    {
      "field": "type",
      "type": "string",
      "meta": {
        "interface": "select-dropdown",
        "width": "half",
        "options": {
          "choices": [
            {
              "text": "PDF",
              "value": "pdf"
            },
            {
              "text": "Документ",
              "value": "doc"
            },
            {
              "text": "Изображение",
              "value": "image"
            },
            {
              "text": "Таблица",
              "value": "spreadsheet"
            },
            {
              "text": "Архив",
              "value": "archive"
            }
          ]
        }
      },
      "schema": {
        "is_nullable": false
      }
    },
    {
      "field": "size",
      "type": "string",
      "meta": {
        "interface": "input",
        "width": "half",
        "options": {
          "placeholder": "Размер файла"
        }
      },
      "schema": {
        "is_nullable": false
      }
    },
    {
      "field": "owner",
      "type": "string",
      "meta": {
        "interface": "input",
        "width": "half",
        "options": {
          "placeholder": "Владелец"
        }
      },
      "schema": {
        "is_nullable": false
      }
    },
    {
      "field": "owner_avatar",
      "type": "string",
      "meta": {
        "interface": "file-image",
        "width": "half"
      },
      "schema": {
        "is_nullable": true
      }
    },
    {
      "field": "project",
      "type": "string",
      "meta": {
        "interface": "input",
        "width": "half",
        "options": {
          "placeholder": "Проект"
        }
      },
      "schema": {
        "is_nullable": true
      }
    },
    {
      "field": "description",
      "type": "text",
      "meta": {
        "interface": "input-multiline",
        "width": "full",
        "options": {
          "placeholder": "Описание документа"
        }
      },
      "schema": {
        "is_nullable": true
      }
    },
    {
      "field": "tags",
      "type": "json",
      "meta": {
        "interface": "tags",
        "width": "full",
        "options": {
          "placeholder": "Теги"
        }
      },
      "schema": {
        "is_nullable": true
      }
    },
    {
      "field": "url",
      "type": "string",
      "meta": {
        "interface": "input",
        "width": "full",
        "options": {
          "placeholder": "URL документа"
        }
      },
      "schema": {
        "is_nullable": true
      }
    },
    {
      "field": "view_count",
      "type": "integer",
      "meta": {
        "interface": "input",
        "width": "half",
        "options": {
          "min": 0
        }
      },
      "schema": {
        "default_value": 0,
        "is_nullable": false
      }
    },
    {
      "field": "download_count",
      "type": "integer",
      "meta": {
        "interface": "input",
        "width": "half",
        "options": {
          "min": 0
        }
      },
      "schema": {
        "default_value": 0,
        "is_nullable": false
      }
    },
    {
      "field": "user_created",
      "type": "uuid",
      "meta": {
        "interface": "select-dropdown-m2o",
        "hidden": true,
        "width": "half",
        "special": ["user-created"],
        "options": {
          "template": "{{name}}"
        }
      },
      "schema": {
        "is_nullable": true,
        "foreign_key_table": "users",
        "foreign_key_column": "id"
      }
    },
    {
      "field": "created_at",
      "type": "timestamp",
      "meta": {
        "interface": "datetime",
        "width": "half",
        "readonly": true,
        "hidden": true,
        "special": ["date-created"]
      },
      "schema": {
        "is_nullable": false
      }
    },
    {
      "field": "updated_at",
      "type": "timestamp",
      "meta": {
        "interface": "datetime",
        "width": "half",
        "readonly": true,
        "hidden": true,
        "special": ["date-updated"]
      },
      "schema": {
        "is_nullable": true
      }
    }
  ]
}
