{
  "collection": "users",
  "fields": [
    {
      "field": "id",
      "type": "uuid",
      "meta": {
        "hidden": true,
        "readonly": true,
        "interface": "input",
        "special": ["uuid"]
      },
      "schema": {
        "is_primary_key": true,
        "has_auto_increment": false
      }
    },
    {
      "field": "name",
      "type": "string",
      "meta": {
        "interface": "input",
        "width": "full",
        "options": {
          "placeholder": "Имя пользователя"
        }
      },
      "schema": {
        "is_nullable": false
      }
    },
    {
      "field": "email",
      "type": "string",
      "meta": {
        "interface": "input",
        "width": "full",
        "options": {
          "placeholder": "Email пользователя"
        },
        "validation": {
          "email": true
        }
      },
      "schema": {
        "is_nullable": false,
        "is_unique": true
      }
    },
    {
      "field": "password",
      "type": "hash",
      "meta": {
        "interface": "input-hash",
        "width": "full",
        "hidden": true,
        "special": ["hash"]
      },
      "schema": {
        "is_nullable": false
      }
    },
    {
      "field": "bio",
      "type": "text",
      "meta": {
        "interface": "input-multiline",
        "width": "full",
        "options": {
          "placeholder": "О себе"
        }
      },
      "schema": {
        "is_nullable": true
      }
    },
    {
      "field": "avatar",
      "type": "string",
      "meta": {
        "interface": "file-image",
        "width": "full"
      },
      "schema": {
        "is_nullable": true
      }
    },
    {
      "field": "urls",
      "type": "json",
      "meta": {
        "interface": "input-json",
        "width": "full",
        "options": {
          "template": {
            "website": "",
            "github": "",
            "linkedin": ""
          }
        }
      },
      "schema": {
        "is_nullable": true
      }
    },
    {
      "field": "role",
      "type": "string",
      "meta": {
        "interface": "select-dropdown",
        "width": "full",
        "options": {
          "choices": [
            {
              "text": "Администратор",
              "value": "admin"
            },
            {
              "text": "Пользователь",
              "value": "user"
            }
          ]
        }
      },
      "schema": {
        "default_value": "user",
        "is_nullable": false
      }
    },
    {
      "field": "created_at",
      "type": "timestamp",
      "meta": {
        "interface": "datetime",
        "width": "half",
        "readonly": true,
        "hidden": true,
        "special": ["date-created"]
      },
      "schema": {
        "is_nullable": false
      }
    },
    {
      "field": "updated_at",
      "type": "timestamp",
      "meta": {
        "interface": "datetime",
        "width": "half",
        "readonly": true,
        "hidden": true,
        "special": ["date-updated"]
      },
      "schema": {
        "is_nullable": true
      }
    }
  ]
}
