{
  "collection": "projects",
  "fields": [
    {
      "field": "id",
      "type": "uuid",
      "meta": {
        "hidden": true,
        "readonly": true,
        "interface": "input",
        "special": ["uuid"]
      },
      "schema": {
        "is_primary_key": true,
        "has_auto_increment": false
      }
    },
    {
      "field": "name",
      "type": "string",
      "meta": {
        "interface": "input",
        "width": "full",
        "options": {
          "placeholder": "Название проекта"
        }
      },
      "schema": {
        "is_nullable": false
      }
    },
    {
      "field": "description",
      "type": "text",
      "meta": {
        "interface": "input-multiline",
        "width": "full",
        "options": {
          "placeholder": "Описание проекта"
        }
      },
      "schema": {
        "is_nullable": false
      }
    },
    {
      "field": "status",
      "type": "string",
      "meta": {
        "interface": "select-dropdown",
        "width": "half",
        "options": {
          "choices": [
            {
              "text": "Завершен",
              "value": "completed"
            },
            {
              "text": "В процессе",
              "value": "in-progress"
            },
            {
              "text": "Не начат",
              "value": "not-started"
            },
            {
              "text": "Просрочен",
              "value": "delayed"
            }
          ]
        }
      },
      "schema": {
        "default_value": "not-started",
        "is_nullable": false
      }
    },
    {
      "field": "progress",
      "type": "integer",
      "meta": {
        "interface": "input",
        "width": "half",
        "options": {
          "min": 0,
          "max": 100
        }
      },
      "schema": {
        "default_value": 0,
        "is_nullable": false
      }
    },
    {
      "field": "start_date",
      "type": "string",
      "meta": {
        "interface": "input",
        "width": "half",
        "options": {
          "placeholder": "Дата начала (ДД.ММ.ГГГГ)"
        }
      },
      "schema": {
        "is_nullable": false
      }
    },
    {
      "field": "due_date",
      "type": "string",
      "meta": {
        "interface": "input",
        "width": "half",
        "options": {
          "placeholder": "Дата завершения (ДД.ММ.ГГГГ)"
        }
      },
      "schema": {
        "is_nullable": false
      }
    },
    {
      "field": "budget",
      "type": "string",
      "meta": {
        "interface": "input",
        "width": "half",
        "options": {
          "placeholder": "Бюджет проекта"
        }
      },
      "schema": {
        "is_nullable": true
      }
    },
    {
      "field": "spent",
      "type": "string",
      "meta": {
        "interface": "input",
        "width": "half",
        "options": {
          "placeholder": "Израсходовано"
        }
      },
      "schema": {
        "is_nullable": true
      }
    },
    {
      "field": "client",
      "type": "string",
      "meta": {
        "interface": "input",
        "width": "half",
        "options": {
          "placeholder": "Клиент"
        }
      },
      "schema": {
        "is_nullable": true
      }
    },
    {
      "field": "manager",
      "type": "string",
      "meta": {
        "interface": "input",
        "width": "half",
        "options": {
          "placeholder": "Менеджер проекта"
        }
      },
      "schema": {
        "is_nullable": false
      }
    },
    {
      "field": "manager_avatar",
      "type": "string",
      "meta": {
        "interface": "file-image",
        "width": "half"
      },
      "schema": {
        "is_nullable": true
      }
    },
    {
      "field": "user_created",
      "type": "uuid",
      "meta": {
        "interface": "select-dropdown-m2o",
        "hidden": true,
        "width": "half",
        "special": ["user-created"],
        "options": {
          "template": "{{name}}"
        }
      },
      "schema": {
        "is_nullable": true,
        "foreign_key_table": "users",
        "foreign_key_column": "id"
      }
    },
    {
      "field": "created_at",
      "type": "timestamp",
      "meta": {
        "interface": "datetime",
        "width": "half",
        "readonly": true,
        "hidden": true,
        "special": ["date-created"]
      },
      "schema": {
        "is_nullable": false
      }
    },
    {
      "field": "updated_at",
      "type": "timestamp",
      "meta": {
        "interface": "datetime",
        "width": "half",
        "readonly": true,
        "hidden": true,
        "special": ["date-updated"]
      },
      "schema": {
        "is_nullable": true
      }
    }
  ]
}
